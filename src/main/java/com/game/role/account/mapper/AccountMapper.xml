<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.game.role.account.mapper.AccountMapper" >
  <resultMap id="BaseResultMap" type="com.game.role.account.entity.AccountEnt" >
    <id column="account_id" property="accountId" jdbcType="VARCHAR" />
    <result column="passward" property="passward" jdbcType="VARCHAR" />
    <result column="accountdata" property="accountData" jdbcType="LONGVARBINARY" />
  </resultMap>
  <select id="selectAccountEnt" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select *
    from account
    where account_id = #{accountId,jdbcType=VARCHAR}
  </select>
  <update id="updateAccountEnt" parameterType="com.game.role.account.entity.AccountEnt" >
    update account
    set passward = #{passward,jdbcType=VARCHAR},
    accountdata = #{accountData,jdbcType=LONGVARBINARY}
    where account_id = #{accountId,jdbcType=VARCHAR}
  </update>

  <insert id="insertAccountEnt" parameterType="com.game.role.account.entity.AccountEnt" >
    insert into account (account_id, passward, accountdata
      )
    values (#{accountId,jdbcType=VARCHAR}, #{passward,jdbcType=VARCHAR}, #{accountData,jdbcType=LONGVARBINARY}
      )
  </insert>

</mapper>